<h1 style="text-align: center;"> Update Sale </h1>
<form action="/find/update/{{find.id}}?_method=PUT" method="POST">
    <div class="container">
        <div class="container">
            <div class="form-group">
                <label for="album" name="album"></label>
                <input required type="album" name="album" id="album" value="{{find.album_name}}" class="form-control">
            </div>
            <div class="form-group">
                <label for="artist" name="artist"></label>
                <input type="text" name="artist" id="artist" value="{{find.artist}}" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="description" name="description"></label>
                <input type="text" required name="description" id="description" value="{{find.description}}" class="form-control">
            </div>
            <a href="/find" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>