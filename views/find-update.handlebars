<div class="container py-3">
    <div class="row px-2">
        <div class="col-lg-9">
            <h4 class="my-2">edit post</h4>
            <form action="/find/update/{{find.id}}?_method=PUT" method="POST">
                <div class="form-group my-3">
                    <label for="album" name="album">album name</label>
                    <input required type="album" name="album" id="album" value="{{find.album_name}}" class="form-control">
                </div>
                <div class="form-group my-3">
                    <label for="artist" name="artist">artist</label>
                    <input type="text" name="artist" id="artist" value="{{find.artist}}" class="form-control" required>
                </div>
                <div class="form-group my-3">
                    <label for="description" name="description">description</label>
                    <textarea type="text" required name="description" id="description" class="form-control" rows="5">{{find.description}}</textarea>
                </div>
                <div class="form-group my-3">
                    <label for="img" name="img">image url</label>
                    <input type="text" name="img" id="img" value="{{find.photo}}" class="form-control">
                </div>
                <button type="submit" class="btn btn-outline-dark my-1">save</button>
                <a href="/" class="btn btn-outline-dark my-1">cancel</a>
            </form>
        </div>
    </div>
</div>