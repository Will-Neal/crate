{{!-- CONTAINER & BACKGROUND IMAGE --}}
<div id="home-bg-img" class="container my-4"
  style="background-image: url(/images/cassette.jpeg); background-size: cover;">
  {{!-- GREETING --}}
  {{!-- {{#if loggedIn}}
  <h3 class="my-3">hey, {{username}}</h3>
  {{/if}} --}}
  {{!-- MAIN CONTENT --}}
  <h2> {{username}}'s Profile</h2>
  <div class="row justify-content-around">
    <div class="col-lg-5 bg-white my-3 py-2" style="opacity: 0.7">
      <h3 class="py-3">latest in the crate</h3>
      {{#each sales as |sale|}}
      <div class="py-1">
        <a class="link" href="/find/{{id}}">
          <p>{{album_name}} by {{artist}} posted by {{user.name}}</p>
        </a>
        <p>{{format_date createdAt}}</p>
      </div>
      {{/each}}
    </div>
    <div class="col-lg-5 bg-white my-3 py-2" style="opacity: 0.7">
      <h3 title="pick up the phone..." class="py-3">latest calls</h3>

      {{#each seeks as |seek|}}
      <div class="py-1">
        <a class="link" href="/seek/{{id}}">
          <p>{{album_name}} by {{artist}} posted by {{user.name}}</p>
        </a>
        <p>{{format_date createdAt}}</p>
      </div>
      {{/each}}
    </div>

  </div>
</div>

