<div class="container py-3">
    <div class="row px-3">
        <div class="col-lg-10 py-2">
            <h2>new dig</h2>
            <p class="lead">what you got?</p>
            <form action="/find/new" method="POST">
                <div class="form-group py-1">
                    <label for="album" name="album">album name</label>
                    <input required type="album" name="album" id="album" class="form-control">
                </div>
                <div class="form-group py-1">
                    <label for="artist" name="artist">artist</label>
                    <input type="text" name="artist" id="artist" class="form-control" required>
                </div>
                <div class="form-group py-1">
                    <label for="description" name="description">description</label>
                    <textarea type="text" required name="description" id="description" class="form-control" rows="4"></textarea>
                </div>
                <div class="form-group py-1">
                    <label for="img" name="img">image url <span class="text-muted">&nbsp;optional. grab a link from the web ;)</span></label>
                    <input type="text" name="img" id="img" class="form-control">
                </div>
                <button type="submit" class="btn btn-outline-dark">post</button>
                <a href="/" class="btn btn-outline-dark">cancel</a>
            </form>
        </div>
    </div>
</div>