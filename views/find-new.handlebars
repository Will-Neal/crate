<div class="container py-3">
    <div class="row">
        <div class="col-lg-10">
            <h2>new dig</h2>
            <p class="lead">list your possession</p>
            <form action="/find/new" method="POST">
                <div class="form-group">
                    <label for="album" name="album">album name</label>
                    <input required type="album" name="album" id="album" class="form-control">
                </div>
                <div class="form-group">
                    <label for="artist" name="artist">artist</label>
                    <input type="text" name="artist" id="artist" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="description" name="description">a little about the record..</label>
                    <textarea type="text" required name="description" id="description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="img" name="img">image url</label>
                    <input type="text" name="img" id="img" class="form-control">
                </div>
                <button type="submit" class="btn btn-outline-dark">post</button>
                <a href="/" class="btn btn-outline-dark">cancel</a>
            </form>
        </div>
    </div>
</div>