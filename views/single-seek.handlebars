<div class="container py-3">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-6 my-3">
      <img id="detail-pg-img" class="img-fluid" src="{{seek.photo}}" alt="alt" />
      <h4 class="my-2">{{seek.album_name}}</h4>
      <h5>{{seek.artist}}</h5>
      <form action="update/{{seek.id}}" method="GET" class="d-inline">
        <button class="btn btn-link link">edit</button>
      </form>
      <form action="/find/{{seek.id}}?_method=DELETE" method="POST" class="d-inline">
        <button class="btn btn-link delete-link">delete</button>
      </form>
    </div>
    <div class="col-lg-5 col-md-6 my-3 py-3">
      <p>{{seek.description}}</p>
      <p>posted by {{seek.user.name}}</p>
      <p>on {{format_date seek.createdAt}}</p>
    </div>
  </div>
</div>


