<div class="container py-3">
    <div class="row">
        <div class="col-lg-10">
            <h4 class="my-1">edit seek request</h4>
            <form action="/seek/update/{{seek.id}}?_method=PUT" method="POST">
                <div class="form-group my-4">
                    <label for="album" name="album">album name</label>
                    <input required type="album" name="album" id="album" value="{{seek.album_name}}" class="form-control">
                </div>
                <div class="form-group my-4">
                    <label for="artist" name="artist">artist</label>
                    <input type="text" name="artist" id="artist" value="{{seek.artist}}" class="form-control" required>
                </div>
                <div class="form-group my-4">
                    <label for="description" name="description">description</label>
                    <input type="text" required name="description" id="description" value="{{seek.description}}" class="form-control">
                </div>
                <div class="form-group my-4">
                    <label for="img" name="img">image url</label>
                    <input type="text" name="img" id="img" value="{{seek.photo}}" class="form-control">
                </div>
                <button type="submit" class="btn btn-outline-dark my-3">save</button>
                <a href="/" class="btn btn-outline-dark my-3">cancel</a>
            </form>
        </div>
    </div>
</div>